<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://xmlns.jcp.org/jsf/html"
	xmlns:f="http://xmlns.jcp.org/jsf/core">

<head>
<title>Employee List</title>
<style>
table, th, td {
	border: 1px solid black;
	border-collapse: collapse;
	padding: 8px;
}
</style>
</head>
<body>
<h:form>
    <h3>Add Employee</h3>
    <h:outputLabel for="employeeName" value="Employee Name: " />
    <h:inputText id="employeeName"
                 value="#{employeeBean.selectedEmployee.employeeName}"
                 required="true"
                 requiredMessage="Please enter the employee’s name!" />
    <h:message for="employeeName" style="color: red;" />

    <br/><br/>

    <!-- Employee Age -->
    <h:outputLabel for="employeeAge" value="Age: " />
    <h:inputText id="employeeAge"
                 value="#{employeeBean.selectedEmployee.employeeAge}"
                 required="true"
                 requiredMessage="Please enter the employee’s age!">
        <f:validateLongRange minimum="18" maximum="100"
                             validatorMessage="Age must be between 18 and 100!" />
    </h:inputText>
    <h:message for="employeeAge" style="color: red;" />

    <br/><br/>

    <!-- Date of Birth -->
    <h:outputLabel for="dateOfBirth" value="Date of Birth (dd/MM/yyyy): " />
    <h:inputText id="dateOfBirth"
                 value="#{employeeBean.selectedEmployee.dateOfBirth}"
                 required="true"
                 requiredMessage="Please enter the date of birth!">
        <f:convertDateTime pattern="dd/MM/yyyy"
                           converterMessage="Invalid format! Use dd/MM/yyyy." />
    </h:inputText>
    <h:message for="dateOfBirth" style="color: red;" />

    <br/><br/>

    <!-- Submit Button -->
    <h:commandButton value="Add Employee"
                     action="#{employeeBean.add}" />

    <br/><br/>

    <!-- Success Message -->
    <h:outputText value="#{employeeBean.message}" style="color: green;" />
</h:form>
	
	<h:form>
	<h3>Employee List</h3>
	<h:dataTable value="#{employeeBean.employees}" var="employee">
		<h:column>
			<f:facet name="header">Employee Code</f:facet>
            #{employee.employeeCode}
        </h:column>
		<h:column>
			<f:facet name="header">Employee Name</f:facet>
            #{employee.employeeName}
        </h:column>
		<h:column>
			<f:facet name="header">Employee Age</f:facet>
            #{employee.employeeAge}
        </h:column>
		<h:column>
			<f:facet name="header">Date of Birth</f:facet>
            #{employee.dateOfBirth}
         </h:column>
		<h:column>
		<f:facet name="header">Action</f:facet>
			<h:commandLink value="Delete" action="#{employeeBean.delete}">
				<f:setPropertyActionListener target="#{employeeBean.selectedEmployee}"
					value="#{employee}" />
			</h:commandLink>

		</h:column>
	</h:dataTable>
	</h:form>
	<h:outputText value="#{employeeBean.message}" />
</body>
</html>
